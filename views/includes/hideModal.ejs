<div class="modal fade" id="confirmHideModal" tabindex="-1" aria-labelledby="confirmHideModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="confirmHideModalLabel">confirmation to hide <%= field %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to hide this <% if(field === "category") { %> <%= field %> <% } %>?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <form action="/admin/categories/<% if(field === "category") { %>hide-category<% } else if (field === "product") { %>hide-product<% }%>" method="post">
          <input type="hidden" value="<% if(field === "category") { %><%= valueId %><% } %>" name="<% if(field === "category") { %>categoryId<% } %>" />
          <button type="submit" class="btn btn-danger">Hide</button>
        </form>
      </div>
    </div>
  </div>
</div>