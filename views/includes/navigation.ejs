<header>
  <nav class='navbar navbar-expand-lg bg-primary' data-bs-theme='dark'>
    <div class='container-fluid'>
      <a class='navbar-brand' href='/'>Shop</a>
      <button class='navbar-toggler' type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
        <span class='navbar-toggler-icon'></span>
      </button>
      <div class='collapse navbar-collapse' id='navbarSupportedContent'>
        <ul class='navbar-nav ms-auto'>
          <li class='nav-item'>
            <a class='nav-link <%= path === '/cart' ? 'active' : '' %>' href='/cart'><i class="bi bi-cart-fill"></i></i><span class="badge rounded-pill text-bg-secondary" style="margin-left: 5px;" id="cart-count">0</span></a>
          </li>
          <% if(isAuthenticated && isAdmin) { %>
          <li class='nav-item dropdown'>
            <a class='nav-link dropdown-toggle' data-bs-toggle='dropdown' href='#' role='button' aria-haspopup='true' aria-expanded='false'>
              Admin
            </a>

            <ul class='dropdown-menu'>
              <li>
                <a class='dropdown-item <%= path === '/admin/categories' ? 'active' : '' %>' href='/admin/categories'>Categories</a>
              </li>
              <li>
                <a class='dropdown-item <%= path === '/admin/categories/add-category' ? 'active' : '' %>' href='/admin/categories/add-category'>Add Category</a>
              </li>
              <li>
                <a class='dropdown-item <%= path === '/admin/products' ? 'active' : '' %>' href='/admin/products'>Products</a>
              </li>
              <li>
                <a class='dropdown-item <%= path === '/admin/products/add-product' ? 'active' : '' %>' href='/admin/products/add-product'>Add Product</a>
              </li>
            </ul>
          </li>
          <% } %> <% if (isAuthenticated) { %>
          <li class='nav-item dropdown'>
            <a class='nav-link dropdown-toggle' role='button' data-bs-toggle='dropdown' aria-expanded='false'>
              My Account
            </a>

            <ul class='dropdown-menu'>
              <li>
                <a class='dropdown-item <%= path === '/profile' ? 'active' : '' %>' href='/'>Profile</a>
              </li>
              <li>
                <form action='/logout' method='post'>
                  <button class='dropdown-item' type='submit'>Logout</button>
                </form>
              </li>
            </ul>
          </li>
          <% } %> <% if (!isAuthenticated) { %>
          <li class='nav-item'>
            <a class='nav-link <%= path === '/login' ? 'active' : '' %>' href='/login'>Login</a>
          </li>
          <li class='nav-item'>
            <a class='nav-link <%= path === '/signup' ? 'active' : '' %>' href='/signup'>Signup</a>
          </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>
</header>